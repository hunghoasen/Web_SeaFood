@model List<Seafood_Website.Models.ItemDetailModel>

<style>
    .text-right {
        text-align: right !important;
    }

    .one-third {
        width: 33.333%;
    }

    .grid__item {
        box-sizing: border-box;
        float: left;
        min-height: 1px;
        padding-left: 30px;
        vertical-align: top;
        width: 100%;
    }
</style>

<!-- begin cart -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Giỏ hàng</h6>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                <div class="row">
                    <div class="col-sm-12">

                        <table class="table table-bordered dataTable no-footer" id="dataTable" width="100%"
                               cellspacing="0" role="grid" aria-describedby="dataTable_info" style="width: 100%;">
                            <thead>
                                <tr role="row">
                                    <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable"
                                        rowspan="1" colspan="1" aria-sort="ascending"
                                        aria-label="Name: activate to sort column descending"
                                        style="width: 108px;">Tên sản phẩm</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1"
                                        colspan="1" aria-label="Position: activate to sort column ascending"
                                        style="width: 164px;">Số lượng</th>
                                    @*<th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1"
                                        colspan="1" aria-label="Age: activate to sort column ascending"
                                        style="width: 45px;">Ngày mua</th>*@
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1"
                                        colspan="1" aria-label="Office: activate to sort column ascending"
                                        style="width: 76px;">Giá</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1"
                                        colspan="1" aria-label="Age: activate to sort column ascending"
                                        style="width: 45px;">Tổng giá</th>
                                    <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1"
                                        colspan="1" aria-label="Action: activate to sort column ascending"
                                        style="width: 86px;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*get value*@
                                @foreach (var item in Model) 
                                {
                                <tr class="even">
                                    <td class="sorting_1">@item.PDetail.name</td>
                                    <td>@item.Quantily</td>
                                    <td>@item.PDetail.price</td>
                                    <td>@item.Quantily * @item.PDetail.price</td>
                                    <td>@ViewBag.tatol</td>
                                    <td>
                                        <a href="#" class="btn btn-danger btn-circle btn-sm"
                                           style="margin-left: 10px;">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12 col-md-7">
                        <div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
                        </div>
                    </div>
                </div>
                <div class="grid__item text-right one-third small--one-whole"> @*All total*@
                    <p>
                        <span class="cart__subtotal-title">Tổng tiền</span> 
                        <span class="h3 cart__subtotal">@ViewBag.Total</span>
                    </p>
                    <a href="#" class="btn btn-success btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-check"></i>
                        </span>
                        <span class="text">Thanh toán</span>
                    </a>
                </div>

            </div>
        </div>
    </div>
</div> @*end cart*@
